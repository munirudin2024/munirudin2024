        <!-- 4. UTILITIES -->
        <section id="utilities" class="demo-section">
            <h2><i class="fas fa-tools text-primary me-2"></i>4. Utility Classes (Magic!)</h2>

            <h4>Spacing (Margin & Padding):</h4>
            <div class="code-example">
m-3    = margin: 1rem
p-4    = padding: 1.5rem
mt-2   = margin-top: 0.5rem
mb-5   = margin-bottom: 3rem
px-3   = padding kiri-kanan: 1rem
my-4   = margin atas-bawah: 1.5rem
            </div>

            <div class="highlight">
                <strong>üî¢ Spacing Scale:</strong> 0, 1, 2, 3, 4, 5 (0 = 0px, 1 = 0.25rem, 2 = 0.5rem, dst...)
            </div>

            <h4>Text Utilities:</h4>
            <div class="code-example">
text-center     = text align center
text-primary    = warna primary
fw-bold         = font weight bold
fs-1            = font size large
text-uppercase  = UPPERCASE
            </div>

            <div class="mb-3">
                <p class="text-center text-primary fw-bold">Text Center + Primary + Bold</p>
                <p class="text-end text-success fs-5">Text End + Success + Large</p>
                <p class="text-decoration-underline text-muted">Underlined + Muted</p>
            </div>

            <h4>Display & Flexbox:</h4>
            <div class="code-example">
d-flex              = display: flex
justify-content-center = justify center
align-items-center  = align center
d-none d-md-block   = hide on mobile, show on desktop
            </div>

            <div class="d-flex justify-content-center align-items-center bg-light" style="height: 100px;">
                <div class="bg-primary text-white p-3 rounded">Centered with Flexbox!</div>
            </div>

            <h4>Background & Colors:</h4>
            <div class="code-example">
bg-primary    = background primary
bg-success    = background success  
text-white    = white text
border        = add border
rounded       = border radius
shadow        = box shadow
            </div>

            <div class="row mt-3">
                <div class="col-2"><div class="bg-primary text-white p-2 text-center rounded">Primary</div></div>
                <div class="col-2"><div class="bg-success text-white p-2 text-center rounded">Success</div></div>
                <div class="col-2"><div class="bg-danger text-white p-2 text-center rounded">Danger</div></div>
                <div class="col-2"><div class="bg-warning text-dark p-2 text-center rounded">Warning</div></div>
                <div class="col-2"><div class="bg-info text-white p-2 text-center rounded">Info</div></div>
                <div class="col-2"><div class="bg-dark text-white p-2 text-center rounded">Dark</div></div>
            </div>
        </section>

        <!-- QUICK REFERENCE -->
        <section class="demo-section bg-primary text-white">
            <h2><i class="fas fa-bookmark me-2"></i>Quick Reference Cheat Sheet</h2>
            
            <div class="row">
                <div class="col-md-6">
                    <h5>üí° Grid System:</h5>
                    <ul>
                        <li><code>.container</code> - Fixed width container</li>
                        <li><code>.row</code> - Horizontal group</li>
                        <li><code>.col-*</code> - Column width (1-12)</li>
                        <li><code>.col-md-6</code> - Responsive column</li>
                    </ul>
                    
                    <h5>üé® Common Classes:</h5>
                    <ul>
                        <li><code>.btn .btn-primary</code> - Button</li>
                        <li><code>.card</code> - Card component</li>
                        <li><code>.navbar</code> - Navigation bar</li>
                        <li><code>.form-control</code> - Input styling</li>
                    </ul>
                </div>
                
                <div class="col-md-6">
                    <h5>üìè Spacing:</h5>
                    <ul>
                        <li><code>.m-3</code> - Margin all sides</li>
                        <li><code>.p-4</code> - Padding all sides</li>
                        <li><code>.mt-2</code> - Margin top</li>
                        <li><code>.px-3</code> - Padding left-right</li>
                    </ul>
                    
                    <h5>üéØ Display:</h5>
                    <ul>
                        <li><code>.d-flex</code> - Flexbox</li>
                        <li><code>.justify-content-center</code> - Center horizontal</li>
                        <li><code>.text-center</code> - Center text</li>
                        <li><code>.d-none .d-md-block</code> - Responsive hide/show</li>
                    </ul>
                </div>
            </div>
        </section>

